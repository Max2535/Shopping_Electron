{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "types": ["node", "electron"],  // ระบุ types ที่ต้องการ
      "skipLibCheck": true  // ข้ามการตรวจสอบ type definitions
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  